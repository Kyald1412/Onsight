<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="#EEE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shadow_11919">

        <ImageView
            android:id="@+id/list_header_main_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/adeirma"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:background="@color/half_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/headerCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="sadasdsasaddsa"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textAlignment="gravity"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/headerCategoryCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="12"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textAlignment="gravity"
                android:layout_marginTop="4dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fav_active"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/headerCategoryCount"
                android:layout_toStartOf="@+id/headerCategoryCount"
                android:layout_marginTop="5dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
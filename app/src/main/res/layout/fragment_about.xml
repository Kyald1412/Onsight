<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/about_fragment_blog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/about_txt_color"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="saddsadsa"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/me"
            app:civ_border_width="1dp"
            app:civ_border_color="#000000"
            android:layout_below="@+id/about_fragment_blog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:id="@+id/about_fragment_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_below="@+id/profile_image1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Developed By"
                android:id="@+id/textView13"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/about_txt_color"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/about_fragment_blog_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/about_txt_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/about_fragment_blog_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/about_txt_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/about_fragment_blog_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/about_txt_color"
                android:textSize="14sp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_fragment_social"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_fragment_info"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp" >

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/about_facebook" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/about_twitter" />

            
        </LinearLayout>

        <View
            android:id="@+id/about_fragment_dilimiter_below_social"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/about_fragment_social"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/green" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_above="@id/about_fragment_social"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/green"
            android:paddingTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/about_fragment_social"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/about_fragment_version_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|center_horizontal"
                android:padding="10dp"
                android:textColor="@color/about_txt_version_color"
                android:text="Version 0.9.9b / 04.10.2016 \n\n Thanks To : \n @Birldi \n @Yehuda \n @imam"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shadow_11919"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <View
                    android:id="@+id/limit2"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:visibility="visible"
                    android:layout_below="@+id/textView12"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#000000"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="62dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="38dp"
                    android:src="@drawable/billi" />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/imam"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#000000"
                    android:layout_below="@+id/textView11"
                    android:layout_alignRight="@+id/limit2"
                    android:layout_alignEnd="@+id/limit2"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Billi Umar Daeli \n( Tester )"
                    android:id="@+id/textView11"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/profile_image"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_toEndOf="@+id/profile_image"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Imam muttaqin \n( Tester )"
                    android:id="@+id/textView111"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/profile_image2"
                    android:layout_marginBottom="15dp"
                    android:layout_toLeftOf="@+id/profile_image2"
                    android:layout_toStartOf="@+id/profile_image2"
                    android:layout_marginRight="40dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Thanks To"
                    android:id="@+id/textView12"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image22"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#000000"
                    android:src="@drawable/maho"
                    android:layout_below="@+id/textView111"
                    android:layout_alignLeft="@+id/profile_image"
                    android:layout_alignStart="@+id/profile_image"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Kiki Kusdiantoro \n( Tester)"
                    android:id="@+id/textView112"
                    android:gravity="center"
                    android:layout_alignTop="@+id/profile_image22"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/profile_image22"
                    android:layout_toEndOf="@+id/profile_image22"
                    android:layout_marginLeft="40dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image23"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#000000"
                    android:layout_below="@+id/textView112"
                    android:layout_alignLeft="@+id/profile_image2"
                    android:layout_alignStart="@+id/profile_image2"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/yuda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Yehuda Bagaskara \n ( Tester )"
                    android:id="@+id/textView113"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/profile_image23"
                    android:layout_toLeftOf="@+id/profile_image23"
                    android:layout_toStartOf="@+id/profile_image23"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="40dp"
                    android:textColor="#000000" />


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
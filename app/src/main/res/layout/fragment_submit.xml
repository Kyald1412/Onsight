<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wallet_bright_foreground_holo_dark"
        android:orientation="vertical"
        android:visibility="visible"
        android:minHeight="1100dp">

        <LinearLayout
            android:id="@+id/about_fragment_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/about_fragment_blog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Testing"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/about_fragment_blog_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:gravity="center_vertical|center"
                android:text="asduyadsguyadgasbdiasdbiuasdiuashdiabsdusbdi dasgiasd iasd uihaduihasiud hia hdsiu hasdi "
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/about_fragment_blog_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="adasdasdasdasdasdasdasdsad asdasd asd asd as"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/about_fragment_blog_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="dkjashdiusa iuadh iuadhiuhad iu ahdiha diu hiuasd i hdashdihasuiihasdi adsh"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:textColor="#000000" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/about_fragment_social"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:background="@color/white"
            android:layout_below="@+id/about_fragment_info"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_uri"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_uri1"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_uri2"
                android:visibility="visible" />




        </RelativeLayout>

        <View
            android:id="@+id/about_fragment_dilimiter_below_social"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/about_fragment_social"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/about_fragment_version_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="\@Onsight - Indonesia"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="205dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/about_fragment_info"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:id="@+id/relativeLayout7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shadow_11919"
                android:id="@+id/relativeLayout5"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <View
                    android:id="@+id/limitjudul"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/namatempat"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/judul"
                    android:hint="Air terjun, bukit, dll.."
                    android:visibility="visible"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Nama Tempat"
                    android:id="@+id/namatempat"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/judul"
                    android:layout_alignStart="@+id/judul"
                    android:layout_marginTop="15dp"
                    android:textColor="#000000" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/shadow_11919"
                android:layout_below="@+id/relativeLayout5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout8">

                <View
                    android:id="@+id/limitlokasi"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lokasitext"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cat"
                    android:hint="kuningan - jawabarat"
                    android:visibility="visible"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Lokasi / Alamat"
                    android:id="@+id/lokasitext"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/cat"
                    android:layout_alignStart="@+id/cat"
                    android:layout_marginTop="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/shadow_11919"
                android:id="@+id/review"
                android:layout_below="@+id/relativeLayout8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <View
                    android:id="@+id/limitreview"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/reviewtext"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/desc"
                    android:lines="5"
                    android:hint="Lokasi ini sangat...."
                    android:visibility="visible"
                    android:layout_below="@+id/limitreview"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Review kamu"
                    android:id="@+id/reviewtext"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/limitreview"
                    android:layout_marginTop="15dp"
                    android:textColor="#000000" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Silahkan isi form dibawah ini"
                android:id="@+id/textView2"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:textColor="#000000" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/shadow_11919"
            android:id="@+id/relativeLayout6"
            android:layout_below="@+id/relativeLayout7"
            android:layout_toRightOf="@+id/about_fragment_social"
            android:layout_toEndOf="@+id/about_fragment_social">

            <View
                android:id="@+id/limitnamakamu"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:visibility="visible"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/namakamutext"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fra_single_recipe_prep_time"
                android:hint="Dhiky, Kyald, Aika..."
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nama Kamu"
                android:id="@+id/namakamutext"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/limitnamakamu"
                android:layout_marginTop="15dp"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_11919"
            android:id="@+id/relativeLayout9"
            android:layout_below="@+id/relativeLayout6"
            android:layout_toRightOf="@+id/about_fragment_social"
            android:layout_toEndOf="@+id/about_fragment_social">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah gambar"
                android:id="@+id/btnFile"
                android:background="@color/red"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="visible"
                android:layout_below="@+id/limit2"
                android:layout_alignLeft="@+id/limit2"
                android:layout_marginTop="10dp"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="no image"
                android:id="@+id/real_uri"
                android:textColor="@color/about_txt_color"
                android:textSize="12dp"
                android:visibility="visible"
                android:layout_alignRight="@+id/real_uri1"
                android:layout_alignEnd="@+id/real_uri1"
                android:layout_alignTop="@+id/btnFile"
                android:layout_toRightOf="@+id/btnFile"
                android:layout_toEndOf="@+id/btnFile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <View
                android:id="@+id/limit2"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:visibility="visible"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textfoto"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Gambar/Foto"
                android:id="@+id/textfoto"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/more"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_below="@+id/btnFile1"
                android:visibility="invisible"
                android:layout_alignLeft="@+id/btnFile2"
                android:layout_alignStart="@+id/btnFile2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah gambar"
                android:id="@+id/btnFile1"
                android:background="@color/red"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                android:layout_below="@+id/btnFile"
                android:layout_marginTop="5dp"
                android:layout_alignRight="@+id/btnFile"
                android:layout_alignEnd="@+id/btnFile"
                android:layout_alignLeft="@+id/imageButton"
                android:layout_alignStart="@+id/imageButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="no image"
                android:id="@+id/real_uri1"
                android:textColor="@color/about_txt_color"
                android:textSize="12dp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnFile1"
                android:layout_toRightOf="@+id/btnFile1"
                android:layout_toEndOf="@+id/btnFile1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="no image"
                android:id="@+id/real_uri2"
                android:textColor="@color/about_txt_color"
                android:textSize="12dp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnFile2"
                android:layout_toRightOf="@+id/btnFile2"
                android:layout_toEndOf="@+id/btnFile2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah gambar"
                android:id="@+id/btnFile2"
                android:background="@color/red"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                android:layout_below="@+id/btnFile1"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/btnFile"
                android:layout_alignStart="@+id/btnFile"
                android:layout_alignRight="@+id/btnFile"
                android:layout_alignEnd="@+id/btnFile" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/more"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_alignTop="@+id/btnFile1"
                android:layout_above="@+id/btnFile2"
                android:visibility="visible"
                android:layout_alignLeft="@+id/btnFile"
                android:layout_alignStart="@+id/btnFile" />

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Submit"
            android:id="@+id/button"
            android:visibility="visible"
            android:layout_below="@+id/relativeLayout9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#FF0000"
            android:textColor="@color/white" />

    </RelativeLayout>

</ScrollView>
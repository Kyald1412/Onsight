<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/about_fragment_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/about_fragment_blog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Testing"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/about_fragment_blog_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAlignment="center"
                android:gravity="center_vertical|center"
                android:text="asduyadsguyadgasbdiasdbiuasdiuashdiabsdusbdi dasgiasd iasd uihaduihasiud hia hdsiu hasdi "
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/about_fragment_blog_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="adasdasdasdasdasdasdasdsad asdasd asd asd as"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/about_fragment_blog_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="dkjashdiusa iuadh iuadhiuhad iu ahdiha diu hiuasd i hdashdihasuiihasdi adsh"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/about_fragment_social"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:background="@color/white"
            android:layout_below="@+id/about_fragment_info"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="visible">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/judul"
                android:hint="Air terjun, bukit, dll.."
                android:layout_below="@+id/limit1"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/limit3"
                android:layout_alignEnd="@+id/limit3"
                android:layout_alignLeft="@+id/limit3"
                android:layout_alignStart="@+id/limit3"
                android:visibility="visible" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/desc"
                android:lines="5"
                android:layout_below="@+id/textView5"
                android:hint="Ulasanmu..."
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:layout_alignLeft="@+id/limit2"
                android:layout_alignStart="@+id/limit2"
                android:layout_alignRight="@+id/limit3"
                android:layout_alignEnd="@+id/limit3" />

            <View
                android:id="@+id/limit4"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/green"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:visibility="visible" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fra_single_recipe_prep_time"
                android:layout_below="@+id/textView6"
                android:layout_alignRight="@+id/desc"
                android:layout_alignEnd="@+id/desc"
                android:layout_alignLeft="@+id/desc"
                android:layout_alignStart="@+id/desc"
                android:hint="Dhiky, Kyald, dst.."
                android:layout_marginTop="10dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Silahkan isi form dibawah ini"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/red"
                android:visibility="visible" />

            <View
                android:id="@+id/limit3"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/red"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nama Tempat Wisata"
                android:id="@+id/textView3"
                android:textColor="@color/red"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Deskripsi"
                android:id="@+id/textView5"
                android:textColor="@color/red"
                android:layout_below="@+id/cat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:visibility="visible" />

            <View
                android:id="@+id/limit2"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/green"
                android:visibility="visible"
                android:layout_alignLeft="@+id/judul"
                android:layout_alignStart="@+id/judul"
                android:layout_below="@+id/textView4"
                android:layout_alignRight="@+id/judul"
                android:layout_alignEnd="@+id/judul" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nama Kamu"
                android:id="@+id/textView6"
                android:layout_below="@+id/desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/red"
                android:layout_marginBottom="10dp"
                android:visibility="visible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/button"
                android:layout_below="@+id/btnFile2"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah gambar"
                android:id="@+id/btnFile"
                android:layout_below="@+id/fra_single_recipe_prep_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/textView5"
                android:layout_toStartOf="@+id/textView5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="visible" />
            <View
                android:id="@+id/limit1"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/green"
                android:layout_below="@+id/textView3"
                android:layout_alignRight="@+id/judul"
                android:layout_alignEnd="@+id/judul"
                android:visibility="visible"
                android:layout_alignLeft="@+id/limit2"
                android:layout_alignStart="@+id/limit2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="no image"
                android:id="@+id/real_uri"
                android:textColor="@color/about_txt_color"
                android:textSize="12dp"
                android:visibility="visible"
                android:layout_alignTop="@+id/btnFile"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/btnFile"
                android:layout_toEndOf="@+id/btnFile"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_uri"
                android:layout_alignBottom="@+id/btnFile"
                android:layout_alignLeft="@+id/real_uri"
                android:layout_alignStart="@+id/real_uri"
                android:visibility="gone" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah gambar"
                android:id="@+id/btnFile1"
                android:background="@color/red"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                android:layout_below="@+id/btnFile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/real_uri"
                android:layout_toStartOf="@+id/real_uri"
                android:layout_marginTop="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah gambar"
                android:id="@+id/btnFile2"
                android:background="@color/red"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="invisible"
                android:layout_below="@+id/btnFile1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/real_uri"
                android:layout_toStartOf="@+id/real_uri"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="no image"
                android:id="@+id/real_uri1"
                android:textColor="@color/about_txt_color"
                android:textSize="12dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnFile1"
                android:layout_toRightOf="@+id/btnFile1"
                android:layout_toEndOf="@+id/btnFile1"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="no image"
                android:id="@+id/real_uri2"
                android:textColor="@color/about_txt_color"
                android:textSize="12dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnFile2"
                android:layout_toRightOf="@+id/btnFile2"
                android:layout_toEndOf="@+id/btnFile2"
                android:layout_marginLeft="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/more"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_alignTop="@+id/btnFile1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/btnFile2"
                android:visibility="visible" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/more"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btnFile1"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_uri1"
                android:visibility="visible"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_uri2"
                android:visibility="visible"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Lokasi"
                android:id="@+id/textView4"
                android:textColor="@color/red"
                android:visibility="visible"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/judul"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cat"
                android:hint="Cikaso, kuningan - Jawa Barat"
                android:visibility="visible"
                android:layout_below="@+id/limit2"
                android:layout_alignLeft="@+id/limit2"
                android:layout_alignStart="@+id/limit2"
                android:layout_alignRight="@+id/limit2"
                android:layout_alignEnd="@+id/limit2"
                android:layout_marginTop="10dp" />


        </RelativeLayout>

        <View
            android:id="@+id/about_fragment_dilimiter_below_social"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/about_fragment_social"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/green"
            android:visibility="visible" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_above="@id/about_fragment_social"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/green"
            android:paddingTop="20dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/about_fragment_version_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="\@Onsight - Indonesia"
            android:textSize="12sp"
            android:layout_below="@+id/about_fragment_social"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible" />
    </RelativeLayout>

</ScrollView>